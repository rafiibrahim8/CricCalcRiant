<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/scoreMain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/score"
            android:layout_weight=".5"
            android:gravity="start"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:id="@+id/target"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="start"
            android:text="@string/target"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="@string/extreRun"
            android:id="@+id/extraRun"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:gravity="start"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/runreq"
            android:id="@+id/runReq"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_weight=".5"
            android:gravity="start"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/ov"
            android:id="@+id/overDone"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_weight=".5"
            android:gravity="start"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/totalOv"
            android:id="@+id/totalOv"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_weight=".5"
            android:gravity="start"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.5"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="@string/ovRem"
            android:id="@+id/ovRem"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:gravity="start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="@string/crr"
            android:id="@+id/crr"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:gravity="start"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="@string/rrr"
            android:id="@+id/rrr"
            android:gravity="start"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/batManMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/batsman_header"
                android:weightSum=".9">

                <TextView
                    android:layout_weight=".4"
                    android:text="@string/batman"
                    android:layout_marginStart="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <TextView
                    android:layout_weight=".1"
                    android:text="@string/r"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <TextView
                    android:layout_weight=".1"
                    android:text="@string/b"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <TextView
                    android:layout_weight=".1"
                    android:text="@string/four_s"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <TextView
                    android:layout_weight=".1"
                    android:text="@string/six_s"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <TextView
                    android:layout_weight=".1"
                    android:text="@string/sr"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/batsman1_back"
                android:weightSum=".9">

                <RadioButton
                    android:layout_weight=".4"
                    android:id="@+id/batman1"
                    android:text="@string/batman1"
                    android:layout_marginStart="2dp"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <TextView
                    android:layout_weight=".1"
                    android:id="@+id/batman1_run"
                    android:text="@string/r"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <TextView
                    android:layout_weight=".1"
                    android:id="@+id/batman1_ball"
                    android:text="@string/b"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <TextView
                    android:layout_weight=".1"
                    android:id="@+id/batman1_4s"
                    android:text="@string/four_s"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <TextView
                    android:layout_weight=".1"
                    android:id="@+id/batman1_6s"
                    android:text="@string/six_s"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <TextView
                    android:id="@+id/batman1_sr"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:text="@string/sr"
                    android:textAppearance="@style/TextAppearance.AppCompat" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/batsman2_back"
                android:weightSum=".9">

                <RadioButton
                    android:layout_weight=".4"
                    android:id="@+id/batman2"
                    android:text="@string/batman1"
                    android:layout_marginStart="2dp"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <TextView
                    android:layout_weight=".1"
                    android:id="@+id/batman2_run"
                    android:text="@string/r"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <TextView
                    android:layout_weight=".1"
                    android:id="@+id/batman2_ball"
                    android:text="@string/b"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <TextView
                    android:layout_weight=".1"
                    android:id="@+id/batman2_4s"
                    android:text="@string/four_s"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <TextView
                    android:layout_weight=".1"
                    android:id="@+id/batman2_6s"
                    android:text="@string/six_s"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <TextView
                    android:layout_weight=".1"
                    android:id="@+id/batman2_sr"
                    android:text="@string/sr"
                    android:textAppearance="@style/TextAppearance.AppCompat" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ballManMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical">

        <!--Will be added programmatically-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/batsman_header"
            android:weightSum=".9">

            <TextView
                android:layout_weight=".4"
                android:text="@string/bowlerH"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:layout_weight=".1"
                android:text="@string/o"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:layout_weight=".1"
                android:text="@string/r"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:layout_weight=".1"
                android:text="@string/w"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:layout_weight=".1"
                android:text="@string/m"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:layout_weight=".1"
                android:text="@string/eco"
                android:textAppearance="@style/TextAppearance.AppCompat" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/batsman1_back"
            android:weightSum=".9">

            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight=".4"
                android:id="@+id/ballman"
                android:text="@string/batman1"
                android:layout_marginStart="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:layout_weight=".1"
                android:id="@+id/ballman_over"
                android:text="@string/o"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:layout_weight=".1"
                android:id="@+id/ballman_run"
                android:text="@string/r"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:layout_weight=".1"
                android:id="@+id/ballman_wicket"
                android:text="@string/w"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:layout_weight=".1"
                android:id="@+id/ballman_maiden"
                android:text="@string/m"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:layout_weight=".1"
                android:id="@+id/ballman_eco"
                android:text="@string/eco"
                android:textAppearance="@style/TextAppearance.AppCompat" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:weightSum=".4">

        <Button
            android:id="@+id/r0"
            android:text="@string/zero"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:background="@drawable/btn12r_back"
            android:layout_marginEnd="1dp"/>

        <Button
            android:id="@+id/r1"
            android:text="@string/one"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:background="@drawable/btn12r_back"
            android:layout_marginEnd="1dp"/>

        <Button
            android:id="@+id/r2"
            android:text="@string/two"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:background="@drawable/btn12r_back"
            android:layout_marginEnd="1dp"/>

        <Button
            android:id="@+id/r3"
            android:text="@string/three"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:background="@drawable/btn12r_back"
            android:layout_marginEnd="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:weightSum=".4">
        <Button
            android:id="@+id/r4"
            android:text="@string/four"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:background="@drawable/btn12r_back"
            android:layout_marginEnd="1dp"/>
        <Button
            android:id="@+id/r5"
            android:text="@string/five"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:background="@drawable/btn12r_back"
            android:layout_marginEnd="1dp"/>
        <Button
            android:id="@+id/r6"
            android:text="@string/six"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:background="@drawable/btn12r_back"
            android:layout_marginEnd="1dp"/>
        <Button
            android:id="@+id/r7"
            android:text="@string/seven"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:background="@drawable/btn12r_back"
            android:layout_marginEnd="1dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:weightSum=".5">

        <Button
            android:id="@+id/wd"
            android:text="@string/wd"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight=".1"
            android:background="@drawable/btn3r_back" />
        <Button
            android:id="@+id/nb"
            android:text="@string/nb"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight=".1"
            android:background="@drawable/btn3r_back" />
        <Button
            android:id="@+id/bye"
            android:text="@string/bye"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight=".1"
            android:background="@drawable/btn3r_back" />
        <Button
            android:id="@+id/lbye"
            android:text="@string/lbye"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight=".1"
            android:background="@drawable/btn3r_back" />
        <Button
            android:id="@+id/wicket"
            android:text="@string/w"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight=".1"
            android:background="@drawable/btn3r_back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:weightSum=".7">

        <Button
            android:id="@+id/undo"
            android:text="@string/undo"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight=".2"
            android:background="@drawable/btn4r_back" />
        <Button
            android:id="@+id/redo"
            android:text="@string/redo"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight=".2"
            android:background="@drawable/btn4r_back" />
        <Button
            android:id="@+id/copyToCb"
            android:text="@string/cTC"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight=".3"
            android:background="@drawable/btn4r_back" />
    </LinearLayout>

</LinearLayout>